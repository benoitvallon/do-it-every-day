<h1>Here is what you should do today</h1>

<table>
  <thead>
    <tr>
      <th>Due date</th>
      <th>Done</th>
      <th>Progress</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.due_date %></td>
        <td><%= activity.done %></td>
        <td><%= activity.progress %></td>
        <td><%= activity.note %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
